{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>ministryofjustice/hmpps-renovate-config:base"],
  "labels": ["dependencies"],
  "regexManagers": [
    {
      "fileMatch": ["hmpps-devops-tools/Dockerfile"],
      "matchStrings": ["HELM_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "helm/helm",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch": ["hmpps-devops-tools/Dockerfile", "hmpps-clamav/Dockerfile"],
      "matchStrings": ["KUBECTL_VERSION=(?<currentValue>\\d+\\.\\d+\\.?\\d*)"],
      "depNameTemplate": "kubernetes/kubernetes",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },
    {
      "matchDepNames": ["helm/helm"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },
    {
      "matchDepNames": ["helm/helm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchDepNames": ["kubernetes/kubernetes"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },
    {
      "matchDepNames": ["kubernetes/kubernetes"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "matchFileNames": ["**/.github/workflows/**/*.ya?ml"],
      "separateMinorPatch": true
    }
  ]
}
